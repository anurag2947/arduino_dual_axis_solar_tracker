  servo_ver_position = servo_ver_position - 10;    }        if((int(Light2(analogRead(A2))) < int(Light3(analogRead(A3)))) && servo_ver_position <= 180)    {      servo_ver_position = servo_ver_position + 10;    }  }    servo_hor.write(servo_hor_position);  servo_ver.write(servo_ver_position);    Serial.print("Light Intensity A0:");  Serial.print(int(Light0(analogRead(A0))));  Serial.println(" Lux");    Serial.print("Light Intensity A1:");  Serial.print(int(Light1(analogRead(A1))));  Serial.println(" Lux");    Serial.print("Light Intensity A2:");  Serial.print(int(Light2(analogRead(A2))));  Serial.println(" Lux");    Serial.print("Light Intensity A3:");  Serial.print(int(Light3(analogRead(A3))));  Serial.println(" Lux\n\n");    delay(100);  }